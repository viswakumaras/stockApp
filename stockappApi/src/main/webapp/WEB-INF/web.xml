<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>product</servlet-name>
    <servlet-class>ProductServlet</servlet-class>
  </servlet>
<servlet>
  <servlet-name>user</servlet-name>
  <servlet-class>UserServlet</servlet-class>
</servlet>
<servlet>
  <servlet-name>orders</servlet-name>
  <servlet-class>OrderServlet</servlet-class>
</servlet>
  <servlet-mapping>
    <servlet-name>product</servlet-name>
    <url-pattern>/products/view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>product</servlet-name>
    <url-pattern>/products/add</url-pattern>
</servlet-mapping>
<servlet-mapping>
  <servlet-name>user</servlet-name>
  <url-pattern>/user/auth</url-pattern>
</servlet-mapping>

<servlet-mapping>
  <servlet-name>orders</servlet-name>
  <url-pattern>/orders/id</url-pattern>
</servlet-mapping>

  <servlet-mapping>
    <servlet-name>orders</servlet-name>
    <url-pattern>/orders/cart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>orders</servlet-name>
    <url-pattern>/orders/checkout</url-pattern>
  </servlet-mapping>

<servlet-mapping>
  <servlet-name>user</servlet-name>
  <url-pattern>/user/id</url-pattern>
</servlet-mapping>

  <servlet-mapping>
    <servlet-name>orders</servlet-name>
    <url-pattern>/orders/changetocheckout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>/user/add</url-pattern>
  </servlet-mapping>

</web-app>
